<h2>Book</h2>

<p>We just need some informations to go:</p>

<%= simple_form_for [@car, @booking] do |f| %>
  <%= f.input :starts_at,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :ends_at,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit class: "button-custom" %>
<% end %>
